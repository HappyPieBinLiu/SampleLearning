<?xml version="1.0" encoding="utf-8"?>
<!-- Shape: rectangle  line oval ring -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 指定圆角矩形的四个圆角半径-->
    <corners android:bottomLeftRadius="5px" android:bottomRightRadius="20px"
             android:topLeftRadius="5px" android:topRightRadius="20px"/>
    <!-- 边框颜色-->
    <stroke android:color="#f0f" android:width="4px"/>
    <!-- 渐变色的指定-->
    <gradient android:startColor="#f00" android:centerColor="#f0f" android:endColor="#00f" android:type="sweep"/>
</shape>
